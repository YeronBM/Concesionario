<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarCoche"
    android:orientation="vertical">

    <TextView
        android:id="@+id/xml_agregarCoche_tv_Titutlo"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Agregar Coche"
        android:gravity="center"
        android:textSize="40dp"/>



    <TextView
        android:id="@+id/xml_agregarCoche_tv_marca"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"

        android:text="Marca"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/xml_agregarCoche_et_marca"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce la marca del coche (sin '' '' por favor)"/>

    <TextView
        android:id="@+id/xml_agregarCoche_tv_modelo"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"

        android:text="Modelo"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/xml_agregarCoche_et_modelo"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el modelo del coche (sin '' '' por favor)"/>

    <TextView
        android:id="@+id/xml_agregarCoche_tv_color"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:text="Color"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/xml_agregarCoche_et_color"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el color del coche (sin '' '' por favor)"/>

    <TextView
        android:id="@+id/xml_agregarCoche_tv_dniPropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:text="DNI del propietario"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/xml_agregarCoche_et_dniPropietario"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el Dni del propetario del coche (sin '' '' por favor, y sin -)"/>

    <Button
        android:id="@+id/xml_agregarCoche_bt_agregarCocheDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar coche"/>
</LinearLayout>