<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CocheDetallado"
    android:orientation="vertical">

    <TextView
        android:id="@+id/xml_cochedetallado_tv_nombreCoche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="placeholder"/>
    <ImageView
        android:id="@+id/xml_cochedetallado_iv_imagenCoche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audiaudia1rojo"
        />
    <!--Datos marca-->
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_Marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca:"/>
        <TextView
            android:id="@+id/tv_Marca_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="placeholder_marca_value"/>
    </LinearLayout>

    <!--Datos Modelo-->
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_Modelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo:"/>
        <TextView
            android:id="@+id/tv_Modelo_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="placeholder_marca_value"/>
    </LinearLayout>

    <!--Datos Color-->
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color:"/>
        <TextView
            android:id="@+id/tv_Color_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="placeholder_marca_value"/>
    </LinearLayout>

    <!--Datos Propietario-->
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_DNIPropietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca:"/>
        <TextView
            android:id="@+id/tv_DNIPropietario_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="placeholder_DNIPropietario_value"/>
    </LinearLayout>

</LinearLayout>